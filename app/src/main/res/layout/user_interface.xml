<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- This displays the title, which is the name of the App -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:textSize="60sp"
        android:textColor="@color/material_dynamic_primary40"
        android:fontFamily="@font/irish_grover"
        />

    <!-- The description is shown just below the title. A brief summary about the app
     including instructions and information -->
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:fontFamily="sans-serif-black"
        android:textAlignment="center"
        android:textColor="@color/material_dynamic_secondary40"
        android:textSize="18sp"
        />

    <!-- A button, which functions serves as to upload an image (a word puzzle) -->

    <ImageButton
        android:id="@+id/upload_button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="500dp"
        android:background="@null"
        android:src="@drawable/upload_button"
        android:contentDescription="@string/upload_button"
        />

</LinearLayout>